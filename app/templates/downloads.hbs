{{page-title this.copy.metaTitle}}

<section class="space-y-16" aria-labelledby="downloads-heading">
  <header class="space-y-6 rounded-3xl border border-slate-200 bg-white/90 p-10 shadow-xl shadow-blue-500/10 backdrop-blur">
    <p class="text-sm font-semibold uppercase tracking-[0.35em] text-blue-600">{{this.copy.hero.eyebrow}}</p>
    <h1 id="downloads-heading" class="text-4xl font-bold leading-tight text-slate-900 sm:text-5xl">{{this.copy.hero.title}}</h1>
    <p class="max-w-3xl text-lg leading-relaxed text-slate-600">{{this.copy.hero.description}}</p>

    <div class="flex flex-wrap items-center gap-6 text-sm text-slate-500">
      <div class="flex items-center gap-2 rounded-full bg-blue-50 px-4 py-2 font-semibold text-blue-700">
        <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-current"><path d="M5 5a1 1 0 0 0-2 0v12a2 2 0 0 0 2 2h14a1 1 0 0 0 0-2H5V5Zm4.18 2.4A1 1 0 0 0 8 8.4v4.32a1 1 0 0 0 1.18.99l4.64-.77a1 1 0 0 0 .84-.99V7.96a1 1 0 0 0-.84-.99l-4.64-.77Z" /></svg>
        <span>{{this.copy.hero.metrics.totalLabel}} {{this.totalCount}} {{this.copy.hero.metrics.unit}}</span>
      </div>
      <div class="flex items-center gap-2 rounded-full bg-slate-100 px-4 py-2 font-semibold text-slate-600">
        <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-current"><path d="M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2Zm1 5a1 1 0 1 0-2 0v3.59l-1.7 1.7a1 1 0 0 0 1.42 1.42l2-2a1 1 0 0 0 .3-.7Z" /></svg>
        <span>{{this.copy.hero.metrics.readyLabel}} {{this.availableCount}} {{this.copy.hero.metrics.unit}}</span>
      </div>
      <div class="flex items-center gap-2 text-slate-500">
        <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-slate-400"><path d="M4 4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2H4Zm0 2h16v12H4V6Zm4 3a1 1 0 1 0 0 2h8a1 1 0 1 0 0-2H8zm0 4a1 1 0 1 0 0 2h5a1 1 0 1 0 0-2H8z" /></svg>
        <span>{{this.copy.hero.note}}</span>
      </div>
    </div>
  </header>

  {{#if this.preview}}
    <section class="grid gap-6 lg:grid-cols-[minmax(0,1.2fr)_minmax(0,1fr)]">
      <article class="space-y-6 rounded-3xl border border-slate-200 bg-white p-8 shadow-lg shadow-blue-500/10">
        <div class="space-y-3">
          <h2 class="text-2xl font-semibold text-slate-900">{{this.preview.heading}}</h2>
          <p class="text-base leading-relaxed text-slate-600">{{this.preview.description}}</p>
        </div>
        <div class="flex flex-wrap items-center gap-4 text-sm text-slate-500">
          <span class="inline-flex items-center gap-2 rounded-full bg-slate-100 px-3 py-1 font-medium text-slate-600">
            <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-current"><path d="M6 3a2 2 0 0 0-2 2v14a1 1 0 0 0 1.58.81L8 18.48l2.42 1.33a1 1 0 0 0 1 0L14 18.48l2.42 1.33A1 1 0 0 0 18 19V5a2 2 0 0 0-2-2H6Zm0 2h10v11.52l-1.42-.78a1 1 0 0 0-1 0L11 17.07l-2.58-1.33a1 1 0 0 0-1 0L6 16.52V5Z" /></svg>
            {{this.preview.fileInfo}}
          </span>
          <div class="flex flex-wrap gap-3">
            <a
              href="/downloads/aqua-crete-catalog.pdf"
              target="_blank"
              rel="noopener"
              class="inline-flex items-center gap-2 rounded-full border border-slate-200 px-4 py-2 text-sm font-semibold text-slate-700 transition hover:border-blue-200 hover:text-blue-600"
            >
              {{this.copy.actions.open}}
              <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-current"><path d="M13 5a1 1 0 1 0 0 2h3.59l-9.3 9.29a1 1 0 0 0 1.42 1.42L18 8.41V12a1 1 0 0 0 2 0V6a1 1 0 0 0-1-1h-6Zm-9 8a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h5a1 1 0 0 0 0-2H5v-4a1 1 0 0 0-1-1Z" /></svg>
            </a>
            <a
              href="/downloads/aqua-crete-catalog.pdf"
              download
              class="inline-flex items-center gap-2 rounded-full bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-blue-700"
            >
              {{this.copy.actions.download}}
              <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-current"><path d="M12 3a1 1 0 0 0-1 1v8.59l-2.3-2.3a1 1 0 0 0-1.4 1.42l4 4a1 1 0 0 0 1.4 0l4-4a1 1 0 0 0-1.4-1.42L13 12.59V4a1 1 0 0 0-1-1Zm-7 14a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-2a1 1 0 1 0-2 0v1H7v-1a1 1 0 0 0-1-1Z" /></svg>
            </a>
          </div>
        </div>
      </article>

      <div class="overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-lg shadow-blue-500/10">
        <iframe
          src="/downloads/aqua-crete-catalog.pdf#toolbar=0&navpanes=0&scrollbar=0"
          title={{this.preview.heading}}
          loading="lazy"
          class="h-[460px] w-full md:h-full"
        ></iframe>
      </div>
    </section>
  {{/if}}

  <section class="flex flex-wrap justify-center gap-6">
    {{#each this.cards as |card|}}
      <article class="group w-full max-w-xs overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-lg shadow-blue-500/10 transition hover:-translate-y-1 hover:shadow-2xl">
        <div class="space-y-4 px-5 py-6">
          <div class="flex items-center justify-between gap-4">
            <h2 class="text-xl font-semibold text-slate-900">{{card.name}}</h2>
            {{#unless card.available}}
              <span class="rounded-full bg-slate-100 px-3 py-1 text-xs font-semibold text-slate-600">
                {{this.copy.comingSoon}}
              </span>
            {{/unless}}
          </div>
          <p class="text-sm leading-relaxed text-slate-600">{{card.summary}}</p>

          {{#if card.available}}
            <div class="text-xs font-medium uppercase tracking-[0.2em] text-blue-600">{{card.fileInfo}}</div>
            <div class="flex flex-col gap-3">
              <a
                href={{card.href}}
                target="_blank"
                rel="noopener"
                class="inline-flex items-center gap-2 rounded-full border border-blue-100 bg-blue-50 px-4 py-2 text-sm font-semibold text-blue-700 transition hover:bg-blue-100"
              >
                {{this.copy.actions.open}}
                <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-current"><path d="M13 5a1 1 0 1 0 0 2h3.59l-9.3 9.29a1 1 0 0 0 1.42 1.42L18 8.41V12a1 1 0 0 0 2 0V6a1 1 0 0 0-1-1h-6Zm-9 8a1 1 0 0 0-1 1v5a1 1 0 0 0 1 1h5a1 1 0 0 0 0-2H5v-4a1 1 0 0 0-1-1Z" /></svg>
              </a>
              <a
                href={{card.href}}
                download
                class="inline-flex items-center gap-2 rounded-full bg-blue-600 px-4 py-2 text-sm font-semibold text-white shadow-sm transition hover:bg-blue-700"
              >
                {{this.copy.actions.download}}
                <svg aria-hidden="true" viewBox="0 0 24 24" class="h-4 w-4 fill-current"><path d="M12 3a1 1 0 0 0-1 1v8.59l-2.3-2.3a1 1 0 0 0-1.4 1.42l4 4a1 1 0 0 0 1.4 0l4-4a1 1 0 0 0-1.4-1.42L13 12.59V4a1 1 0 0 0-1-1Zm-7 14a1 1 0 0 0-1 1v2a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-2a1 1 0 1 0-2 0v1H7v-1a1 1 0 0 0-1-1Z" /></svg>
              </a>
            </div>
          {{else}}
            <p class="text-sm text-slate-500">{{this.copy.comingSoonNote}}</p>
          {{/if}}
        </div>
      </article>
    {{/each}}
  </section>
</section>
